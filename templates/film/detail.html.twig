{% extends 'base.html.twig' %}

{% block body %}
<div class="film-detail">
    <h2>{{ film.titre }}</h2>
    <p>{{ film.description }}</p>
    <p>Réalisateur : {{ film.realisateur }}</p>
    <p>Date de sortie : {{ film.dateSortie|date('d/m/Y') }}</p>
    <p>Durée : {{ film.duree|date('H:i:s') }}</p>
    <a href="{{ path('app_film_add_projection', {'id': film.id}) }}">Ajouter une projection</a>

</div>
{% endblock %}
